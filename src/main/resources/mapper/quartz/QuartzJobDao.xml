<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.modules.quartz.dao.QuartzJobDao">

    <sql id="baseSql">
        select job_id, job_name, invoke_target, cron_expression, status from quartz_job
    </sql>

    <select id="queryList" resultType="com.platform.modules.quartz.domain.QuartzJob">
        <include refid="baseSql"/>
        <where>
            <if test="jobName != null and jobName != ''">
                AND job_name like concat('%', #{jobName}, '%')
            </if>
            <if test="status != null">
                AND status = #{status.code}
            </if>
            <if test="invokeTarget != null and invokeTarget != ''">
                AND invoke_target like concat('%', #{invokeTarget}, '%')
            </if>
        </where>
    </select>

</mapper> 